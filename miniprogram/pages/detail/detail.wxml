<!-- banner -->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" data-src="{{item}}" bindtap="previewImage"></image>
    </swiper-item>
  </block>
</swiper>

<view class="detail">
  <text class="title">{{product.name}}</text>
  <text class="price">￥{{product.price}}</text>

</view>

<view class="separate"></view>
<text>商品评价</text>
<scroll-view scroll-y="true">
<block wx:for-items="{{comments}}" wx:key="name">
  <view class="commentBlock">
    <text class="text-remark">{{item.body}}</text>
    <text class="text-remark">{{item.createdAt}}</text>
    <text class="text-remark">{{item.nickName}}</text>
  </view>

  <!-- <image class="image_detail" src="{{item}}" /> -->
</block>
</scroll-view>
<view class="separate"></view>

<view class="temp"></view>

