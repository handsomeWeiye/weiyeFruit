<scroll-view class="scroll" scroll-y="true">
  <view class="separate"></view>
  <view wx:for="{{carts}}" wx:key='index'>
    <view class="cart_container">
      <image class="item-select" bindtap="switchSelect" data-index="{{index}}" data-id="{{index}}" src="{{item.isSeleted?'../../images/cart/selected.png':'../../images/cart/select.png'}}" />
      <image class="item-image" src="{{item.image}}"></image>
      <view class="column">
        <text class="title">{{item.name}}</text>
        <view class="row">
          <text class="sku-price">￥</text>
          <text class="sku-price">{{item.price}}</text>
          <view class="sku">

            <view class="stepper">
              <!-- 减号 -->
              <text class="{{minusStatus}}" bindtap="bindMinus" data-index="{{index}}" data-id="{{index}}">-</text>
              <!-- 数值 -->
              <input type="number" bindchange="bindManual" value="{{item.num}}" data-index="{{index}}" />
              <!-- 加号 -->
              <text class="normal" bindtap="bindPlus" data-index="{{index}}" data-id="{{index}}">+</text>
            </view>

          </view>
        </view>

      </view>
    <image src="../../images/cart/remove.png" bindtap="removeCarts" data-item="{{item}}" class="remove"></image>
    </view>
    <view class="separate"></view>
  </view>


</scroll-view>
<view class="bottom_total">
  <view class="bottom_line"></view>
  <view class="row">
    <image class="item-allselect" bindtap="allSelect" src="{{isAllSelect?'../../images/cart/selected.png':'../../images/cart/select.png'}}" />
    <text class="small_text">全选</text>
    <text>合计:￥ </text>
    <text class="price">{{totalMoney}}</text>
    <button class="button-red" bindtap="toBuy" formType="submit">去结算</button>
  </view>
</view>