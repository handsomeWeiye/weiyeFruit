<!-- banner start-->
<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}" wx:key="unique">
    <swiper-item>
      <image src="{{item.image.url}}" />
    </swiper-item>
  </block>
</swiper>
<!-- banner end-->

<!--水果销售 start-->
<view class="welfare-container">
  <view class="category-title">
    <text class="title">火爆专区</text>
    <!-- <view class="line_name">
      <text>每日上新</text>
    </view> -->
  </view>
  <scroll-view scroll-y="true">
    <view class="welfares">
      <block wx:for-items="{{goodsWelfareItems}}" wx:key="name">
        <view class="welfares-good" data-type="{{item.name}}" data-typeid="{{item.objectId}}" >
          <view>
            <image src="{{item.image}}" bindtap="toDetail" data-object="{{item.objectId}}"  class="welfares-image" mode="widthFix" />
          </view>
          <view class="product-name">
            {{item.name}}
          </view>
          <view class="product-price-wrap">
            <p class="product-price-new">￥{{item.price}}</p>
            <p class="product-price-old">￥{{item.originPrice}}</p>
            <image src="../../images/home/add.png" class="icon" bindtap="addCarts" data-item="{{item}}" data-id="{{index}}" data-index="{{index}}"></image>
            <!-- <p class="discount">{{item.discount}}折</p> -->
          </view>

        </view>
      </block>
    </view>
  </scroll-view>
</view>
<!--水果专场 end-->
